<div class="container">

  <hr/>
  <h3>Email format validation: Horizontal one with bootstrap</h3>
  <form class="form-horizontal" role="form">
    {{#validate-bootstrap label='Email' propertyBinding="user.email" horizontal=true labelCol=5 inputCol=5}}
      {{input value=user.email class="form-control col-sm-9" id="email"}}
    {{/validate-bootstrap}}
  </form>
  <hr/>

  <h3>Horizontal one with bootstrap</h3>
  <form class="form-horizontal" role="form">
    {{#validate-bootstrap label='Login' propertyBinding="user.login" horizontal=true labelCol=5 inputCol=5}}
      {{input value=user.login class="form-control col-sm-9" id="login3"}}
    {{/validate-bootstrap}}
  </form>
  <hr/>

  <h3>Vertical one with bootstrap</h3>
  <form class="form" role="form">
    {{#validate-bootstrap label='登陆' propertyBinding="user.login"}}
      {{input value=user.login class="form-control" id="login4"}}
    {{/validate-bootstrap}}
  </form>
  <hr/>

  <h3>Inline syntax</h3>
  {{input-validate propertyBinding="user.login"}}
  <hr/>

  <h3>validate select</h3>
  <form class="form" role="form">
    {{#validate-bootstrap label='成绩等级' propertyBinding="user.level" disableIcon=true}}
      {{view Ember.Select content=options  prompt="Please select a name" class="form-control"
      value=user.level}}
    {{/validate-bootstrap}}
  </form>
  <hr/>

  <h3>validate vertical password</h3>
  <form class="form" role="form">
    {{#validate-bootstrap label="password" propertyBinding="user.password" inputType="password"}}
      {{input type='password' value=user.password class="form-control"}}
    {{/validate-bootstrap}}
  </form>
  <form class="form" role="form">
    {{#validate-bootstrap label="passwordConfirmation" propertyBinding="user.passwordConfirmation" inputType="password"}}
      {{input type='password' value=user.passwordConfirmation class="form-control"}}
    {{/validate-bootstrap}}
  </form>
  <hr/>

  <h3>validate vertical checkbox</h3>
  <form class="form" role="form">
    {{#validate-bootstrap label="agreement" propertyBinding="user.agreement" inputType="checkbox"}}
      {{input type='checkbox' checked=user.agreement}}是否已阅读并同意遵守本协议
    {{/validate-bootstrap}}
  </form>
  <hr/>

  <h3>validate horizontal checkbox</h3>
  <form class="form-horizontal" role="form">
    {{#validate-bootstrap  propertyBinding="user.agreement" inputType="checkbox" horizontal=true}}
      {{input type='checkbox' checked=user.agreement}}是否已阅读并同意遵守本协议
    {{/validate-bootstrap}}
  </form>
  <hr/>

  <h3>validate vertical checkbox group</h3>
  <form class="form" role="form">
    {{#validate-bootstrap label="至少选择一项爱好" propertyBinding="user.hobbies" disableIcon=true}}
      {{view 'checkbox-group' content=hobbies validateModel='user.hobbies'}}
    {{/validate-bootstrap}}
  </form>
  <hr/>

  <h3>validate vertical checkbox group</h3>
  <form class="form" role="form">
    {{#validate-bootstrap label="至少选择一项爱好" propertyBinding="user.occupation" disableIcon=true}}
      <div class="form-group">
        {{view 'radio' name="occupation" selectionBinding="user.occupation" value="0" id="radio1"}}
        <label for="radio1">教师</label>
        {{view 'radio' name="occupation" selectionBinding="user.occupation" value="1" id="radio2"}}
        <label for="radio2">公务员</label>
        {{view 'radio' name="occupation" selectionBinding="user.occupation" value="2" id="radio3"}}
        <label for="radio3">医生</label>
        {{view 'radio' name="occupation" selectionBinding="user.occupation" value="3" id="radio4"}}
        <label for="radio4">企/事业单位员工</label>
      </div>
    {{/validate-bootstrap}}
  </form>
  <hr/>
</div>

